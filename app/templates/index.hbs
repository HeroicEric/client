<div class="container index">
   <h1 id="title">Categories</h1>

  <div class="grid-items-lines">
    {{#each category in controller}}
      {{#link-to "categories.show" category class="grid-item"}}
        <h2>{{category.name}} ({{category.addons.length}})</h2>

        <p>{{category.description}}</p>
      {{/link-to}}
    {{/each}}

    <div class="right-cover"></div>
    <div class="bottom-cover"></div>
  </div>

  {{!--<h2>Featured addons</h2>--}}
  {{!--{{featured-addons addons=controller count=4 sort='todo'}}--}}
</div>
