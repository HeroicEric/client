<div class="container packages-show">
  <div class='package-info'>
    <h1>{{model.name}}</h1>
    <p>{{model.description}}</p>
    <label>Categories</label>
    {{#each category in model.categories}}
      {{#comma-separated list=model.categories item=category as |value separator|}}
        {{#link-to "categories.show" value}}{{value.name}}{{separator}}{{/link-to}}
      {{/comma-separated}}
    {{/each}}
  </div>

  <div class='package-stats'>
    <p class='package-install'>npm install {{model.name}}</p>
    <ul class='stats-list'>
      <li><b>{{latestVersion}}</b> from {{time-ago latestVersionDate}}</li>
      <li>{{human-url url=repositoryUrl}}</li>
      <li>{{human-url url=npmjsUrl}}</li>
    </ul>
  </div>
</div>
