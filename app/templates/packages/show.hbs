<div class="container packages-show">
  <div class="package-info">
    <h1>{{model.name}}</h1>
    <p>{{model.description}}</p>
    <section>
      <h4>Categories</h4>
      {{#each category in model.categories}}
        {{#comma-separated list=model.categories item=category as |value separator|}}
          {{#link-to "categories.show" value}}{{value.name}}{{separator}}{{/link-to}}
        {{/comma-separated}}
      {{else}}
        This addon hasn't been categorized yet. <a href="mailto:">Suggest categories &raquo;</a>
      {{/each}}
      {{#if session.isAuthenticated}}
        <form {{action "save" on="submit"}}>
          <fieldset>
          {{multiselect-checkboxes options=categories labelProperty='name' selection=model.categories}}

            {{#if isSaving}}
              <input type="submit" value="Saving" disabled>
            {{else}}
              {{input type="submit" value="Save"}}
            {{/if}}
          </fieldset>
        </form>
      {{/if}}
    </section>
    <section>
      <h4>Review</h4>
      <small>Reviewed on December 28, 2014 for version 0.0.3</small>
      <ol class="questions">
        <li><span class="question">Has the addon been updated in the last six months?</span><span class="dots"></span><span class="answer"><strong>Yes</strong></span></li>
        <li><span class="question">Is the README reasonably complete?</span><span class="dots"></span><span class="answer"><strong>No</strong></span></li>
        <li><span class="question">Does it refrain from using private APIs?</span><span class="dots"></span><span class="answer"><strong>Yes</strong></span></li>
     </ol>
    </section>
  </div>

  <div class="package-stats">
    <p class="package-install">npm install {{model.name}}</p>
    <ul class="stats-list">
      <li><b>{{model.latestVersion}}</b> from {{ago model.latestVersionDate}}</li>
      <li>{{human-url url=model.repositoryUrl}}</li>
      <li>{{human-url url=model.npmUrl}}</li>
    </ul>
  </div>
</div>
